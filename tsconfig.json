{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@business/*": ["src/business/*"],
      "@infra/*": ["src/infra/*"],
      "@presentation/*": ["src/presentation/*"],
      "@test/*": ["test/*"]
    },
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "include": ["src", "test"]
}
